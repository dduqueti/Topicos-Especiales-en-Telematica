<h1>Chat</h1>

<ul id="chat">
  <%= render @messages %>
</ul>

<%= form_for ([@room, @new_message]), remote: true do |f| %>
  <%= f.text_field :room_id, :type => :hidden,  :value => "2" %>
  <%= f.text_field :user_id, :type => :hidden,  :value => "1" %>
  <%= f.text_field :content %>
  <%= f.submit "Send" %>
<% end %>

<%= subscribe_to "/rooms/2" %>